/*

//Sum square difference
//Solved

#include <iostream>
#include <string>
#include <sstream>

using namespace std;

int prime(int number) {
    int sum_squares = 0;
    int natural = 0;
    for (int i = 1; i <= number; i++) {
        sum_squares = sum_squares + (i * i);
    }
    for (int x = 1; x <= number; x++) {
        if (x == number) {
            natural = natural + x;
            natural = natural * natural;
        } else {
            natural = natural + x;
        }
    }
    return (natural - sum_squares);
}

int main () {
    int number;
    cout << "Select the nth prime number: ";
    cin >> number;
    cout << prime(number);
    return 0;
}
