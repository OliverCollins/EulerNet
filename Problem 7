//Large Prime Numbers
//Unsolved

#include <iostream>
#include <string>
#include <sstream>

using namespace std;

int prime(int number) {
    int counter = 1;
    int prime = 3;
    int div = 2;
    while (number != counter) {
        while ((prime % div != 0) && (prime > div)) {
            if ((prime - 1) == div) {
                counter++;
                prime++;
                div = 2;
            } else {
                div++;
            }
        } prime++;
        div = 2;
    } return prime;;
}

int main () {
    int number;
    cout << "Select the nth prime number: ";
    cin >> number;
    cout << prime(number);
    return 0;
}
