//Largeest Collatz sequence
//Unsolved


#include <iostream>

using namespace std;

int collatz(int const n) {
    int path[10000000] = {0};
    while (n < 1000000) {
        for (int i = 0; i < n; ++i) {
            if (n == 1) {
                path[i] == 1; break;
            } else {
                if (n % 2 == 0) {
                    
                }
            }
        }
    } return path[i];
}

int main () {
    int number;
    cout << "Size: ";
    cin >> number;
    cout << collatz(number);
    return 0;
}
