/*

//Largest Palidrome Product
//Unsolved

#include <iostream>
#include <string>
#include <sstream>

using namespace std;

int main () {
    string number;
    int number1 = 1;
    int number2 = 1;
    int number3;
    while (number1 * number2 < 1000000) {
        number3 = number1 * number2;
        number = to_string(number3);
        string str1 = number.substr(0,3);
        string str2 = number.substr(3,6);
        if (str1 == str2) {
            cout << number1 << endl;
            cout << number2 << endl;
            if (number1 > 500000) {
                number2++;
            } else {
                number1++;
            }
        }
    }
    cout << "Hello World!" << endl;
    return 0;
}
