/*

//Sum of multiples of 3
//Solved

#include <iostream>
using namespace std;

int main () {
    int number;
    int three = 3;
    int five = 5;
    cout << "Number: ";
    cin >> number;
    int counter = 0;
    while (number > three) {
        if (three % 5 == 0) {
            counter = counter + three;
            three = three + 3;
        } else {
            counter = counter + three;
            three = three + 3;
        }
    } while (number > five) {
        if (five % 3 == 0) {
            five = five + 5;
        } else {
            counter = counter + five;
            five = five + 5;
        }
    } cout << counter;
}
