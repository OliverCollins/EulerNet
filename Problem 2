/*

//Sum of even fibonacci numbers
//Solved

#include <iostream>
using namespace std;

int fibonacci(int nth_term) {
    if (nth_term == 1) {
        return nth_term;
    } else {
        int add = 0;
        int counter = 1;
        int current = 1;
        int prev = 1;
        int next = 1;
        while (counter != nth_term && current < 4000000) {
            next = current + prev;
            counter++;
            prev = next - prev;
            current = next;
            if (current % 2 == 0) {
                add = add + current;
            }
        }
        return add;
    }
}

int main () {
    int number;
    cout << "Number: ";
    cin >> number;
    cout << fibonacci(number);
}
