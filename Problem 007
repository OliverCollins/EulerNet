/*

//Large Prime Numbers
//Unsolved

#include <iostream>

using namespace std;

int prime(int const n) {
    int p_counter = 0, x = 0, p = 3, check = 0;
    while (n != p_counter) {
        for (x = 2; x <= p / 2; ++x) {
            if (p % x == 0) {
                break;
                check = 1;
            }
        } if (check == 0) {
            ++p_counter;
            p += 2;
        } else {
            p += 2;
        }
    } return p;
}

int main () {
    int number;
    cout << "Select the nth prime number: ";
    cin >> number;
    cout << prime(number);
    return 0;
}
