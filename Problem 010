/*

//Summation of Primes
//Unsolved


#include <iostream>

using namespace std;

int prime(int const n) {
    int p = 3, p_add = 2, x = 2;
    while (n > p) {
        while ((p - 1) != x) {
            if ((p % x != 0) && (p % 3 != 0)) {
                ++x;
            } else {
                p += 2;
                x = 2;
            }
        } p_add += p;
        ++p;
        x = 2;
    } return p_add;
}

int main() {
    int n;
    cout << "Select a number: ";
    cin >> n;
    cout << prime(n);
}
