/*

//Highly Divisible Triangular Numbers
//Unsolved


#include <iostream>
#include <stdio.h>
#include <cstring>

using namespace std;

int triangle(int const t) {
    int n = 0;
    for (int i = 0; i <= t; ++i) {
        n += i;
    } return n;
}

int main () {
    int t = 1;
    int fill_array[500] = {0};
    while (fill_array[500] == 0) {
        for (int i = 1; i < triangle(t); ++i) {
            if (triangle(t) % i == 0) {
                triangle(t) == triangle(t) / i;
            }
        }
    }
    return 0;
}
