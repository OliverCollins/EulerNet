/*

//Highly Divisible Triangular Numbers
//Unsolved


#include <iostream>
#include <stdio.h>
#include <cstring>

using namespace std;

int triangle(int const t) {
    int n = 0;
    for (int i = 0; i <= t; ++i) {
        n += i;
    } return n;
}

int main () {
    int t;
    cout << "Size: ";
    cin >> t;
    cout << triangle(t);
    return 0;
}
